{
  "name": "maziv-backend",
  "version": "1.0.0",
  "description": "Maziv Project Management Backend",
  "type": "module",
  "main": "app.js",
  "private": true,
  "engines": { "node": ">=20.0.0" },
  "scripts": {
"start": "node app.js",
  "dev": "NODE_ENV=development nodemon app.js",
  "migrate": "npx sequelize-cli db:migrate",
  "render-start": "npm run migrate && node app.js",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.1",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.0",
    "sequelize-cli": "^6.6.0"   
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
}
