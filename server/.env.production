# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration (will be provided by Render)
# DATABASE_URL=postgres://user:password@host:port/database

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=30d

# CORS Configuration (comma-separated if multiple origins)
ALLOWED_ORIGINS=https://maziv-project-management.vercel.app

# Logging
LOG_LEVEL=info

# File Uploads (in production, consider using S3 or similar for file storage)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB
